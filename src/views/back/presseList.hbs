<div class="heading-container">
  <h1 class="page-title">Presse - Liste des articles</h1>
  <a href="/admin/presse/article/ajouter" class="small-btn-text">Ajouter un article</a>
</div>
<div class="main-container">
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th class="col">Date</th>
        <th class="col">Auteur</th>
        <th class="col colonne-url">URL</th>
        <th class="text-end"></th>
      </tr>
    </thead> 
    <tbody>
      {{#each articles}}
      <tr>
        <td>{{{this.date_article}}}</td>
        <td>{{{this.auteur}}}</td>
        <td><a href="{{{this.url}}}" target="_blank">{{{this.url}}}</a></td>
        <td class="text-end">
          <a href="/admin/presse/article/{{{this.id}}}" class="actions-icons"><i class="bi bi-pencil"></i></a> 
          <a href="/admin/presse/article/supprimer/{{{this.id}}}" class="actions-icons"><i class="bi bi-trash3"></i></a>
        </td>
      </tr>
      {{/each}}
    </tbody>      
  </table>
</div>
