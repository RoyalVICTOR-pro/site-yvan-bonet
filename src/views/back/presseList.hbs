<h1 class="page-title">Presse - Liste des articles</h1>
<div class="main-container">
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th class="col">Date</th>
        <th class="col">Auteur</th>
        <th class="col">URL</th>
        <th class="text-end"></th>
      </tr>
    </thead> 
    <tbody>
      {{#each articles}}
      <tr>
        <td>{{{this.date_auteur}}}</td>
        <td>{{{this.auteur}}}</td>
        <td><a href="{{{this.URL}}}">{{{this.URL}}}</a></td>
        <td class="text-end">
          <a href="/admin/presse/article/{{{this.id}}}" class="actions-icons"><i class="bi bi-pencil"></i></a> 
          <a href="#" class="actions-icons delete-confirm" data-id="{{{this.id}}}" data-url="/admin/presse/article/delete/{{{this.id}}}"><i class="bi bi-trash3"></i></a>
        </td>
      </tr>
      {{/each}}
    </tbody>      
  </table>
</div>
