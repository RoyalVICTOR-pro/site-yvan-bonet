<div class="heading-container">
<h1 class="page-title">Articles de presse - Modifier un article</h1>
<a href="/admin/presse/articles" class="small-btn-text">Retour Ã  la liste</a>
</div>
<div class="main-container">
    <form action="/admin/presse/article/modifier/{{article.id}}" method="POST" class="back-form">
      <div class="mb-5">
        <label for="url">URL :</label>
        <input type="text" class="form-control" id="url" name="url" value="{{article.url}}">
      </div>
      <div class="mb-5">
        <label for="extract">Extrait d'article :</label>
        <textarea class="form-control" id="extract" name="extract">{{article.extract}}</textarea>
      </div>
      <div class="mb-5">
        <label for="auteur">Auteur :</label>
        <input type="text" class="form-control" id="auteur" name="auteur" value="{{article.auteur}}">
      </div>
      <div class="mb-5">
        <label for="date_article">Date d'article :</label>
        <input type="text" class="form-control" id="date_article" name="date_article" value="{{article.date_article}}">
      </div>
      <div class="mb-5">
        <label for="description">Description :</label>
        <textarea class="form-control" id="description" name="description">{{article.description}}</textarea>
      </div>
      <button type="submit" class="form-btn">Modifier</button>
    </form>
</div>
