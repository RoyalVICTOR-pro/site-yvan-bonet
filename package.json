{
  "name": "site-yvan-bonet",
  "version": "1.0.0",
  "description": "Yvan BONET Website",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "node-sass ./src/views/sass/main.scss ./public/css/style.css -w",
    "devserver": "live-server",
    "start:dev": "SET NODE_ENV=development& nodemon server.js",
    "start": "npm-run-all --parallel start:dev watch:sass",
    "start:prod": "SET NODE_ENV=production& nodemon server.js",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "debug": "ndb server.js",
    "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js --public-url .",
    "build:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js --public-url ."
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "blueimp-md5": "^2.19.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "express": "~4.16.1",
    "express-handlebars": "^6.0.6",
    "express-rate-limit": "^6.7.0",
    "handlebars": "^4.7.7",
    "hbs": "~4.0.4",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.9.1",
    "sequelize": "^6.31.1",
    "slugify": "^1.6.5",
    "validator": "^13.9.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.12",
    "concat": "^1.0.3",
    "connect-livereload": "^0.6.1",
    "eslint": "^8.34.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "livereload": "^0.9.3",
    "morgan": "^1.9.1",
    "node-sass": "^7.0.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.5",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.8.4",
    "sequelize-cli": "^6.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/rvictor-projects/clients/site-yvan-bonet.git"
